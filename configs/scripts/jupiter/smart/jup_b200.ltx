[smart_terrain]
respawn_radius = 300
squad_id = 9
max_population = 2
respawn_params = respawn@jup_b200   
respawn_idle = 86400


[respawn@jup_b200]

spawn_monster
spawn_stalker
spawn_bandit
spawn_csky
spawn_dolg
spawn_freedom
spawn_killer
spawn_army
spawn_monolith
spawn_zombied

