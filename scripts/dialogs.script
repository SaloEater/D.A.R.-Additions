	local npc = who_is_npc(a,b)
	local squad = get_object_squad(npc)
	
	
	if (squad) then
		for k in squad:squad_members() do
			utils.se_obj_save_var(k.id,k.object:name(),"companion_cannot_teleport",nil)
			xrs_kill_wounded.hostage_list[k.id] = nil
		end
	else
