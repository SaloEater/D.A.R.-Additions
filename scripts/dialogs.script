		give_info(npc_name.."_quest_doc_given_2")
		num = 2
	elseif (has_alife_info(npc_name.."_quest_doc_given_2")) then
		num = 3
	else
		give_info(npc_name.."_quest_doc_given_1")
	end

	for k,v in pairs(valuable) do
		local item = db.actor:object(k)
		if (item) then
		
			local text = game.translate_string("st_quest_doc_finish_base")
			if (num == 1) then
				text = game.translate_string("st_quest_doc_finish_"..npc_name)
			elseif (num == 3) then
				v = v*2
			end
			
			db.actor:transfer_item(item,npc)
			news_manager.relocate_item(db.actor, "out", item:section())
			relocate_money(npc, v, "in")
			xr_sound.set_sound_play(db.actor:id(), "pda_tips")

			local reward = revard_list[npc_name]
			if (reward) and (num < 3) then
				dialogs.relocate_item_section(db.actor,reward[num],"in")
			end
			
			return text
		end
	end
end

