function robbery_dialog_take_items(a,b)

	local npc = dialogs.who_is_npc(a,b)
	local ini = system_ini()
	local ltx = ini_file("misc\\trade\\trade_presets.ltx")
	local total_cost = 0
	local function itr( actor, itm )
		local sec = itm:section()
		
		local cost = ini:r_float_ex(sec,"cost")*1.0 or 0
		local can_take = (not ltx:line_exist("misc",sec)) and (not ltx:line_exist("misc",sec)) and (not ltx:line_exist("trash",sec)) and (not ltx:line_exist("unused",sec)) and (itm:condition() > 0.7) and (ini:r_bool_ex(sec,"quest_item",false) == false) and (cost > 0) and (cost <= (3000 - total_cost))
		
		can_take = can_take and not (IsWeapon(itm) or IsOutfit(itm) or IsHeadgear(itm))
		
		
		if  can_take and (total_cost < 3000) then
			total_cost = total_cost + cost
			db.actor:transfer_item(itm,npc)
			news_manager.relocate_item(db.actor, "out", sec)
		end
	end
	db.actor:iterate_inventory(itr, db.actor)
	
	local diff = 3000-math.ceil(total_cost/100)*100
	if (diff > 0) then
		local money = db.actor:money()
		money = utils.clamp(money,0,diff)
		db.actor:transfer_money(money, npc)
		news_manager.relocate_money(db.actor, "out", money)
	end
end

